<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">Edit User</h5>
  </div>
  <div class="card-body">
    <form action="/users/edit/<%= userRecord.id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label required-field">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= userRecord.name %>" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label required-field">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= userRecord.email %>" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password <small class="text-muted">(Leave blank to keep current password)</small></label>
        <input type="password" class="form-control" id="password" name="password">
      </div>
      <div class="mb-4">
        <label for="role" class="form-label required-field">Role</label>
        <select class="form-select" id="role" name="role" required>
          <option value="user" <%= userRecord.role === 'user' ? 'selected' : '' %>>User</option>
          <option value="admin" <%= userRecord.role === 'admin' ? 'selected' : '' %>>Administrator</option>
        </select>
      </div>
      <div class="d-flex justify-content-end">
        <a href="/users" class="btn btn-secondary me-2">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>