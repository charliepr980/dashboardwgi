<%- include('../partials/messages') %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-header">
          <h4><i class="fas fa-file-upload"></i> Import Interviews</h4>
        </div>
        <div class="card-body">
          <p>
            Import interviews from an Excel file. The file should have the following columns:
            <code>Candidate Name</code>, <code>Company</code>, <code>Position</code>, <code>Type</code>,
            <code>Start Time</code>, <code>End Time</code>, <code>Status</code>, <code>Recruiter</code>,
            <code>Location</code>, <code>Notes</code>
          </p>
          
          <div class="alert alert-info">
            <strong>Tips:</strong>
            <ul>
              <li>Type must be one of: 'Light Industrial' or 'Professional'</li>
              <li>Status must be one of: 'Scheduled', 'Completed', 'Cancelled', 'No Show', 'Rescheduled'</li>
              <li>Start Time and End Time should be in YYYY-MM-DD HH:MM format</li>
              <li>End Time must be after Start Time</li>
            </ul>
          </div>

          <a href="/interviews/template" class="btn btn-secondary mb-3">
            <i class="fas fa-file-download"></i> Download Template
          </a>
          
          <form action="/interviews/import" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="interviewsFile" class="form-label">Excel File</label>
              <input class="form-control" type="file" id="interviewsFile" name="interviewsFile" required accept=".xlsx,.xls">
              <div class="form-text">Only .xlsx and .xls files are supported.</div>
            </div>
            
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-upload"></i> Upload and Import
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>